<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/contact_edit"
        android:hint="enter contact name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/search_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="result"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open_contact"
        android:id="@+id/open_contact"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search_by_lookup"
        android:id="@+id/search_name"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open_contacts"
        android:id="@+id/open_contacts"/>

    <EditText
        android:id="@+id/qr_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="enter contact name"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open qrcode"
        android:id="@+id/create_qrcode"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scan qrcode"
        android:id="@+id/scan_qrcode"/>
</LinearLayout>